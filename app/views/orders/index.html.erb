

<div class="container">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm-12 col-md-12">
        <h4>
          Order # <%= order.id %>
          <%= link_to order.product.name, order %>
        </h4>
        <p><%= order.product.description %></p>
        <strong><%= order.product.price %></strong>
      </div><!-- /col -->
    <% end %>
  </div>

</div>
