<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">Contact Us</h1>
					<ol class="breadcrumb">
						<li><a href="#">Home</a></li>
						<li class="active">contact</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="page-wrapper">
	<div class="contact-section">
		<div class="container">
			<div class="row">
				<!-- Contact Form -->
				<div class="contact-form col-md-6 " >
          <%= flash[:notice] %>
          <%= form_with(url:"/simple_pages/about", method: "post", id: "contact-form", local: true) do |form| %>
          <!-- <div class="row"> -->
            <div class="form-group">
              <%= form.text_field :name, class: "form-control", placeholder: "Your Name", id: "name" %>
            </div>
            <div class="form-group">
              <%= form.text_field :email, class: "form-control", placeholder: "Your Email", id:"email" %>
            </div>
            <div class="form-group">
              <%= form.text_field :subject, class: "form-control", placeholder: "Subject", id:"subject" %>
            </div>
            <div class="form-group">
              <%= form.text_area :message, class: "form-control", placeholder: "Message", rows: 6, id:"message" %>
            </div>
          <!-- </div> -->
          <%= form.submit "Send", class: "form_label btn btn-transparent", id:"contact-submit" %>
          <% end %>
				</div>


				<!-- ./End Contact Form -->

				<!-- Contact Details -->
				<div class="contact-details col-md-6 " >
					<div class="google-map">
						<div id="map"></div>
					</div>
					<ul class="contact-short-info" >
						<li>
							<i class="icofont icofont-home"></i>
							<span>Stresemannstr. 123, Kreuzberg, 10963 Berlin</span>
						</li>
						<li>
							<i class="icofont icofont-smart-phone"></i>
							<span>Phone: 0129- 12323-123123</span>
						</li>
						<li>
							<i class="icofont icofont-ui-email"></i>
							<span>Email: hello@bikeberlin.com</span>
						</li>
					</ul>
					<!-- Footer Social Links -->
					<div class="social-icon">
						<ul>
							<li><a class="fb-icon" href="#"><i class="icofont icofont-social-facebook"></i></a></li>
							<li><a href="#"><i class="icofont icofont-social-twitter"></i></a></li>
							<li><a href="#"><i class="icofont icofont-social-google-plus"></i></a></li>
							<li><a href="#"><i class="icofont icofont-social-pinterest"></i></a></li>
						</ul>
					</div>
					<!--/. End Footer Social Links -->
				</div>
				<!-- / End Contact Details -->



			</div> <!-- end row -->
		</div> <!-- end container -->
	</div>
</section>


