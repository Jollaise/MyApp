



<section class="signin-page account">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="block text-center">
          <a class="logo" href="index.html">
            <img src="images/logo.png" alt="">
          </a>
          <h2 class="text-center">Register</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'text-left clearfix') do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="form-group">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
            </div>
            <div class="text-center actions">
              <%= f.submit "Sign up", class: 'btn btn-main text-center' %>
            </div>
            <p class="mt-20">Already have an account ?<%= render "devise/shared/links" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
